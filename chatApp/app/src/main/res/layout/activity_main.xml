<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_bg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="@string/login"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/passwordEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="77dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/loginEditText"
        app:layout_constraintStart_toStartOf="@+id/loginEditText"
        app:layout_constraintTop_toBottomOf="@+id/loginEditText" />

    <Button
        android:id="@+id/mainLogInButton"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_edit_text"
        android:text="@string/log_in"
        android:textAlignment="center"
        android:textColor="@color/btn_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/passwordEditText"
        app:layout_constraintRight_toRightOf="@id/passwordEditText"
        app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

    <TextView
        android:id="@+id/createAccountTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/register_string"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="#37474F"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/mainLogInButton"
        app:layout_constraintLeft_toLeftOf="@id/mainLogInButton"
        app:layout_constraintRight_toRightOf="@id/mainLogInButton" />

</androidx.constraintlayout.widget.ConstraintLayout>