<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3.5dp"
    android:layout_marginBottom="3.5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userOwnProfileImage"

        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginRight="5dp"

        android:background="@drawable/round_purple_view"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/userOwnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_element_in_chat"

        android:maxWidth="200dp"

        android:padding="10dp"

        android:text="AOAOOAOAOAOAOOAOAOAOAOOAAOAOOAOAOOAAOOAOAOAOA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userOwnProfileImage"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>